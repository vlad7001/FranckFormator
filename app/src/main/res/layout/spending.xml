<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/whiteee"
        android:orientation="vertical"
        tools:context="com.example.vlad.franckformator.SecondActivity">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:text="@string/balance_how_much_money_have_you_spend"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBalance"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:autoSizeTextType="uniform"
            android:inputType="numberDecimal"
            android:minWidth="160dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomContainer"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_below="@+id/etCost"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/whitewall"
                android:textColor="@android:color/black"
                android:text="Products" />

            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_below="@+id/etCost"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/whitewall"
                android:textColor="@android:color/black"
                android:text="Lunch" />

            <Button
                android:id="@+id/button3"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_below="@+id/etCost"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/whitewall"
                android:textColor="@android:color/black"
                android:text="Clothes" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_below="@+id/etCost"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:background="@drawable/whitewall"
                android:text="Sport" />

            <Button
                android:id="@+id/button5"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_below="@+id/etCost"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/whitewall"
                android:textColor="@android:color/black"
                android:text="Leisure" />

            <Button
                android:id="@+id/button6"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_below="@+id/etCost"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:background="@drawable/whitewall"
                android:text="FUN" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCost"
            android:layout_centerHorizontal="true"
            android:text="@string/please_insert_the_amount_choose_the_category"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic|bold" />

    </RelativeLayout>
    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_items"/>
</android.support.v4.widget.DrawerLayout>